{% extends 'base.html.twig' %}

{% block body %}

{% if app.user %}
  <p> Hey {{app.user.username}} </p>
  <a href="{{path('logout')}}" class="btn btn-danger"> Logout </a>
  <a href="{{path('add')}}" class="btn btn-success"> Add a telephone </a>
{% else %}
  <a href="{{path('login')}}" class="btn btn-primary"> Login </a>
  <a href="{{path('register')}}" class="btn btn-secondary"> Sign Up ! </a>
{% endif %}

<div class="card m-2" style="width: 18rem;">
  <img src={{telephone.image}} class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{telephone.modelName}}</h5>
    <p class="card-text">{{telephone.description}}</p>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Price: {{telephone.price}}</li>
    <li class="list-group-item">Stockage: {{telephone.stockage}}</li>
    <li class="list-group-item">Author: {{telephone.author.username}}</li>
  </ul>
  {% if app.user %}
    {% if app.user.id == telephone.author.id %}
      <a href="{{path('edit', {id: telephone.id})}}" class="btn btn-primary">Edit this phone</a>
      <br>
      <br>
      <a href="{{path('delete', {id: telephone.id})}}" class="btn btn-danger">Delete this phone</a>
    {% endif %}
  {% endif %}
</div>
    <a href={{path('telephone')}} class="btn btn-primary">Back to index</a>
  </div>
</div>


{% endblock %}
